{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./lib",
        "sourceMap": true,
        "target": "es2016",
        "declaration": true,
        "strictNullChecks": true
    },
    "include": [
        "spec/**/*",
        "src/*.ts",
        "example/*.ts",
        "monads.ts",
    ]
}
